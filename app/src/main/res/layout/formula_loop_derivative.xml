<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAlignedChildIndex="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:tag="SYMBOL_LAYOUT_TAG">

        <com.mkulesh.micromath.widgets.FormulaTextView
            style="@style/FormulaTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/formula_loop_diff" />

        <com.mkulesh.micromath.widgets.FormulaTextView
            style="@style/FormulaTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/formula_operator_key" />

        <com.mkulesh.micromath.widgets.FormulaLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mkulesh.micromath.widgets.FormulaTextView
                style="@style/FormulaTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formula_loop_diff" />

            <com.mkulesh.micromath.widgets.FormulaEditText
                style="@style/FormulaTextEditStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formula_index_key"
                app:equationName="true"
                app:indexName="true"
                app:intermediateArgument="true" />
        </com.mkulesh.micromath.widgets.FormulaLayout>
    </LinearLayout>

    <com.mkulesh.micromath.widgets.FormulaEditText
        style="@style/FormulaTextEditStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/formula_arg_term_key" />

</merge>